<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainScreen" >

    <Button android:id="@+id/getQuestionsBtn"
        android:onClick="mainActivityBtnHandler"
        style="?android:borderlessButtonStyle"
        android:layout_width="300dp" 
        android:layout_height="wrap_content"
        android:text="@string/getQuestionsBtn"
        />
    
    <Button android:id="@+id/askQuestionsBtn"
        android:onClick="mainActivityBtnHandler" 
        style="?android:borderlessButtonStyle"
        android:layout_width="300dp" 
        android:layout_height="wrap_content"
        android:text="@string/askQuestionsBtn"
        />
    
    <Button  android:id="@+id/searchBtn"
        android:onClick="mainActivityBtnHandler"
        style="?android:borderlessButtonStyle"
        android:layout_width="300dp" 
        android:layout_height="wrap_content"
        android:text="@string/searchBtn"
        />
    
    <Button android:id="@+id/settingsBtn"
        android:onClick="mainActivityBtnHandler"
        style="?android:borderlessButtonStyle"
        android:layout_width="300dp" 
        android:layout_height="wrap_content"
        android:text="@string/settingsBtn"
        />
    
    <TextView android:id="@+id/testDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug Output Empty"        
        />
    
    
</LinearLayout>